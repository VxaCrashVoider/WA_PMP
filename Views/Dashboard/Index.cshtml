                            </div>
                            <div>
                                <div class="d-flex justify-content-between small mb-1">
                                    <span>Issues Completed</span>
                                    <span class="fw-bold">12/20</span>
                                </div>
                                <div class="progress" style="height: 6px;">
                                    <div class="progress-bar bg-primary" role="progressbar" style="width: 60%"></div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>

        </div>
    </div>

    <!-- Create Project Modal -->
    <div class="modal fade" id="createProjectModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content border-0 shadow-lg">
                <div class="modal-header">
                    <h5 class="modal-title fw-bold">Create project</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Name <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="projectNameInput" placeholder="e.g. Customer Support" oninput="generateKey()">
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Key <span class="text-danger">*</span></label>
                            <input type="text" class="form-control text-uppercase font-monospace" id="projectKeyInput" placeholder="KEY" style="max-width: 150px; letter-spacing: 1px;">
                            <div class="form-text small">Unique key for issues (e.g. KEY-101).</div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Template</label>
                            <div class="list-group">
                                <label class="list-group-item d-flex gap-3 align-items-center">
                                    <input class="form-check-input flex-shrink-0" type="radio" name="template" value="kanban" checked>
                                    <span>
                                        <span class="d-block fw-semibold">Kanban</span>
                                        <span class="small text-secondary">Visualize work flow, limit work in progress.</span>
                                    </span>
                                </label>
                                <label class="list-group-item d-flex gap-3 align-items-center">
                                    <input class="form-check-input flex-shrink-0" type="radio" name="template" value="scrum">
                                    <span>
                                        <span class="d-block fw-semibold">Scrum</span>
                                        <span class="small text-secondary">Sprints, backlog, and estimation.</span>
                                    </span>
                                </label>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer bg-light border-top-0">
                    <button type="button" class="btn btn-link text-secondary text-decoration-none fw-bold" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary fw-bold px-4">Create</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        function generateKey() {
            const name = document.getElementById('projectNameInput').value;
            if (name) {
                const words = name.trim().split(/\s+/);
                let key = "";
                if (words.length === 1) {
                    key = words[0].substring(0, 3).toUpperCase();
                } else {
                    key = words.map(w => w[0]).join('').substring(0, 4).toUpperCase();
                }
                document.getElementById('projectKeyInput').value = key;
            } else {
                document.getElementById('projectKeyInput').value = '';
            }
        }
    </script>
</body>
