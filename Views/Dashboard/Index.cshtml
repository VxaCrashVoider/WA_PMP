                            <div class="project-type">Software Project</div>
                            <div class="project-meta">
                                <span class="meta-label">Last viewed 2 mins ago</span>
                                <span class="key-badge">ALP</span>
                            </div>
                        </div>

                        <!-- Project 2 -->
                        <div class="project-card">
                            <div class="card-top-decoration deco-business"></div>
                            <div class="project-header-row">
                                <div class="project-icon" style="background: linear-gradient(135deg, #00875A 0%, #57D9A3 100%);">
                                    <i class="fa-solid fa-bullhorn"></i>
                                </div>
                                <div class="project-actions">
                                    <button class="star-btn" title="Star"><i class="fa-regular fa-star"></i></button>
                                    <button class="star-btn"><i class="fa-solid fa-ellipsis"></i></button>
                                </div>
                            </div>
                            <div class="project-name">Marketing Q4</div>
                            <div class="project-type">Business Project</div>
                            <div class="project-meta">
                                <span class="meta-label">12 open issues</span>
                                <span class="key-badge">MKT</span>
                            </div>
                        </div>

                        <!-- Project 3 -->
                        <div class="project-card">
                            <div class="card-top-decoration deco-software"></div>
                            <div class="project-header-row">
                                <div class="project-icon" style="background: linear-gradient(135deg, #6554C0 0%, #8777D9 100%);">
                                    <i class="fa-solid fa-mobile-screen"></i>
                                </div>
                                <div class="project-actions">
                                    <button class="star-btn" title="Star"><i class="fa-regular fa-star"></i></button>
                                    <button class="star-btn"><i class="fa-solid fa-ellipsis"></i></button>
                                </div>
                            </div>
                            <div class="project-name">Mobile App Revamp</div>
                            <div class="project-type">Software Project</div>
                            <div class="project-meta">
                                <span class="meta-label">Sprint 2 Active</span>
                                <span class="key-badge">MAR</span>
                            </div>
                        </div>
                    </div>

                    <!-- Activity Widget -->
                    <div class="dashboard-widget">
                        <div class="widget-header">
                            Recent Activity
                            <a href="#" class="small text-decoration-none">View all</a>
                        </div>
                        <div class="activity-list">
                            <div class="activity-item">
                                <div class="activity-icon"><i class="fa-solid fa-check"></i></div>
