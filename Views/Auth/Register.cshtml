@{
    ViewData["Title"] = "Đăng ký";
    Layout = "~/Views/Shared/_Layout_Auth.cshtml";
}

@section Styles {
    <style>
        :root {
            --primary-color: #0052cc;
            --primary-hover: #0747a6;
            --bg-color: #fafbfc;
            --text-color: #172b4d;
        }

        body {
            font-family: 'Inter', sans-serif;
            background-color: var(--bg-color);
            color: var(--text-color);
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            background-image: url('https://images.unsplash.com/photo-1519389950473-47ba0277781c?ixlib=rb-1.2.1&auto=format&fit=crop&w=1920&q=80');
            background-size: cover;
            background-position: center;
        }

        .auth-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(255, 255, 255, 0.5);
            backdrop-filter: blur(5px);
            z-index: -1;
        }

        .auth-card {
            background: white;
            border-radius: 8px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            width: 100%;
            max-width: 450px;
            padding: 40px;
            position: relative;
            animation: fadeIn 0.4s ease-out;
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .brand-logo {
            text-align: center;
            margin-bottom: 30px;
            color: var(--primary-color);
            font-weight: 800;
            font-size: 2rem;
            letter-spacing: -1px;
        }

            .brand-logo i {
                margin-right: 8px;
            }

        .form-floating > .form-control:focus,
        .form-floating > .form-control:not(:placeholder-shown) {
            padding-top: 1.625rem;
            padding-bottom: 0.625rem;
        }

        .btn-primary {
            background-color: var(--primary-color);
            border-color: var(--primary-color);
            padding: 10px;
            font-weight: 600;
            width: 100%;
            margin-top: 15px;
        }

            .btn-primary:hover {
                background-color: var(--primary-hover);
                border-color: var(--primary-hover);
            }

        .switch-auth {
            text-align: center;
            margin-top: 20px;
            font-size: 0.9rem;
        }

            .switch-auth a {
                color: var(--primary-color);
                text-decoration: none;
                font-weight: 500;
            }

                .switch-auth a:hover {
                    text-decoration: underline;
                }
    </style>
}

<div class="auth-overlay"></div>

<div class="container d-flex justify-content-center">
    <div class="auth-card">
        <div class="brand-logo">
            <i class="fa-solid fa-layer-group"></i>WA_PM
        </div>
        <h4 class="text-center mb-4" style="color: #42526e;">Đăng ký tài khoản</h4>

        <form id="registerForm">
            <!-- Display Name -->
            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="registerName" name="displayName" placeholder="Họ và tên" required>
                <label for="registerName">Họ và tên hiển thị</label>
            </div>

            <!-- Email Input -->
            <div class="form-floating mb-3">
                <input type="email" class="form-control" id="registerEmail" name="email" placeholder="name@example.com" required>
                <label for="registerEmail">Email</label>
            </div>

            <!-- Password Input -->
            <div class="form-floating mb-3">
                <input type="password" class="form-control" id="registerPassword" name="password" placeholder="Password" required>
                <label for="registerPassword">Mật khẩu</label>
            </div>

            <!-- Confirm Password Input -->
            <div class="form-floating mb-3">
                <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" placeholder="Confirm Password" required>
                <label for="confirmPassword">Nhập lại mật khẩu</label>
            </div>

            <div class="form-check mb-3">
                <input class="form-check-input" type="checkbox" value="" id="terms" name="terms" required>
                <label class="form-check-label small" for="terms">
                    Tôi đồng ý với <a href="#">Điều khoản sử dụng</a> và <a href="#">Chính sách bảo mật</a>
                </label>
            </div>

            <button type="submit" class="btn btn-primary" id="registerSubmit">Đăng ký tài khoản</button>
        </form>

        <div class="switch-auth mt-3 text-center">
            Đã có tài khoản? <a asp-controller="Auth" asp-action="Login">Đăng nhập</a>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        (function () {
            const form = document.getElementById('registerForm');
            if (!form) return;
            const submitBtn = document.getElementById('registerSubmit');

            form.addEventListener('submit', async function (e) {
                e.preventDefault();
                if (submitBtn) submitBtn.disabled = true;

                const name = document.getElementById('registerName')?.value.trim();
                const email = document.getElementById('registerEmail')?.value.trim();
                const password = document.getElementById('registerPassword')?.value;
                const confirm = document.getElementById('confirmPassword')?.value;
                const terms = document.getElementById('terms')?.checked;

                if (!name || !email || !password) {
                    if (window.Toast && typeof window.Toast.error === 'function') Toast.error('Đăng ký thất bại', 'Vui lòng điền đầy đủ thông tin.', { duration: 5000 });
                    else alert('Vui lòng điền đầy đủ thông tin.');
                    if (submitBtn) submitBtn.disabled = false;
                    return;
                }

                if (password !== confirm) {
                    if (window.Toast && typeof window.Toast.error === 'function') Toast.error('Đăng ký thất bại', 'Mật khẩu và xác nhận mật khẩu không khớp.', { duration: 5000 });
                    else alert('Mật khẩu và xác nhận mật khẩu không khớp.');
                    if (submitBtn) submitBtn.disabled = false;
                    return;
                }

                if (!terms) {
                    if (window.Toast && typeof window.Toast.error === 'function') Toast.error('Đăng ký thất bại', 'Bạn phải đồng ý với điều khoản.', { duration: 5000 });
                    else alert('Bạn phải đồng ý với điều khoản.');
                    if (submitBtn) submitBtn.disabled = false;
                    return;
                }

                const payload = { displayName: name, email: email, password: password, avatarUrl: null };

                try {
                    const res = await fetch('/api/Account/register', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json', 'Accept': 'application/json' },
                        body: JSON.stringify(payload)
                    });

                    const contentType = res.headers.get('content-type') || '';
                    let data = null;
                    if (contentType.includes('application/json')) data = await res.json().catch(() => null);
                    else { const text = await res.text().catch(() => null); try { data = text ? JSON.parse(text) : null; } catch { data = { message: text }; } }

                    if (res.status === 201 || res.ok) {
                        if (window.Toast && typeof window.Toast.success === 'function') Toast.success('Đăng ký thành công', 'Vui lòng đăng nhập.', { duration: 5000 });
                        else alert('Đăng ký thành công. Vui lòng đăng nhập.');
                        window.location.href = (data && data.redirectUrl) || '/Auth/Login';
                        return;
                    }

                    const errMsg = (data && (data.message || data.error || data.errors)) || 'Lỗi khi đăng ký';
                    if (typeof errMsg === 'object') {
                        const text = JSON.stringify(errMsg);
                        if (window.Toast && typeof window.Toast.error === 'function') Toast.error('Đăng ký thất bại', text, { duration: 6000 });
                        else alert(text);
                    } else {
                        if (window.Toast && typeof window.Toast.error === 'function') Toast.error('Đăng ký thất bại', errMsg, { duration: 6000 });
                        else alert(errMsg);
                    }
                } catch (ex) {
                    console.error(ex);
                    if (window.Toast && typeof window.Toast.error === 'function') Toast.error('Lỗi hệ thống', 'Không thể kết nối tới server.', { duration: 6000 });
                    else alert('Không thể kết nối tới server.');
                } finally {
                    if (submitBtn) submitBtn.disabled = false;
                }
            });
        })();
    </script>
}
